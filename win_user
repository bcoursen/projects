---
- name: Create Windows Domain Admin user
  hosts: localhost
  gather_facts: false

  tasks:
    - name: Create Windows Domain Admin user
      win_domain_user:
        name: {{ user_name }}
        firstname: {{ first_name }}
        surname: {{ last_name }}
        company: {{ company }}
        password: "{{ win_password }}"
        state: {{ state }}
        account_locked: {{ lock }}
        groups:
          - Domain Admins
